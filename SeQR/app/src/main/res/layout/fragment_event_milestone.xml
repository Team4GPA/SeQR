<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".events.EventMilestoneFragment">

    <Button
        android:id="@+id/eventMilestoneBackButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/back"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/eventMilestoneText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:paddingBottom="10dp"
        android:text="Milestones"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/eventMilestoneText"
        app:layout_constraintBottom_toTopOf="@+id/eventMilestoneBackButton">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/milestone1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:orientation="horizontal"
                android:background="@drawable/edit_text_rounded_corner"
                android:elevation="5dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <ImageView
                    android:id="@+id/milestoneImageView1"
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:id="@+id/milestoneTextView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="Attendance has reached 25% of capacity"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_toEndOf="@id/milestoneImageView1"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/milestone2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:orientation="horizontal"
                android:background="@drawable/edit_text_rounded_corner"
                android:elevation="5dp"
                app:layout_constraintTop_toBottomOf="@+id/milestone1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <ImageView
                    android:id="@+id/milestoneImageView2"
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:id="@+id/milestoneTextView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="Attendance has reached 50% of capacity"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_toEndOf="@id/milestoneImageView2"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/milestone3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:orientation="horizontal"
                android:background="@drawable/edit_text_rounded_corner"
                android:elevation="5dp"
                app:layout_constraintTop_toBottomOf="@+id/milestone2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <ImageView
                    android:id="@+id/milestoneImageView3"
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:id="@+id/milestoneTextView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="Attendance has reached 75% of capacity"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_toEndOf="@id/milestoneImageView3"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/milestone4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:orientation="horizontal"
                android:background="@drawable/edit_text_rounded_corner"
                android:elevation="5dp"
                app:layout_constraintTop_toBottomOf="@+id/milestone3"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <ImageView
                    android:id="@+id/milestoneImageView4"
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:id="@+id/milestoneTextView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="Attendance has reached full capacity"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_toEndOf="@id/milestoneImageView4"/>
            </RelativeLayout>



        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>